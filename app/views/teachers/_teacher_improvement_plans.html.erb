<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Improvement Plans

    <a data-toggle="collapse" href="#teacher_improvement_plans_new_form">
      Add improvement plan
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @teacher.improvement_plans.each do |improvement_plan| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to improvement_plan, improvement_plan %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="teacher_improvement_plans_new_form">
        <%= render partial: "teachers/teacher_improvement_plans_new_form" %>
      </div>
    </div>

  </ul>
</div>
