<div class="card mb-3">
  <h2 class="card-header h4">
    Invite #<%= invite.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Coach</dt>
      <dd>
        <% if @invite.coach.present? %>
          <%= link_to invite.coach, invite.coach %>
        <% end %>
      </dd>

      <dt>Improvement plan</dt>
      <dd>
        <% if @invite.improvement_plan.present? %>
          <%= link_to invite.improvement_plan, invite.improvement_plan %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back invite, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_invite_url(invite), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to invite, method: :delete, data: { confirm: "Do you really want to delete this invite?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(invite.updated_at) %> ago
  </div>
</div>
