<div class="card mb-3">
  <h2 class="card-header h4">
    Improvement Plan #<%= improvement_plan.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Teacher</dt>
      <dd>
        <% if @improvement_plan.teacher.present? %>
          <%= link_to improvement_plan.teacher, improvement_plan.teacher %>
        <% end %>
      </dd>

      <dt>Status</dt>
      <dd><%= improvement_plan.status %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back improvement_plan, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_teacher == @improvement_plan.teacher %>
          <%= link_to edit_improvement_plan_url(improvement_plan), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_teacher == @improvement_plan.teacher %>
          <%= link_to improvement_plan, method: :delete, data: { confirm: "Do you really want to delete this improvement_plan?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(improvement_plan.updated_at) %> ago
  </div>
</div>
