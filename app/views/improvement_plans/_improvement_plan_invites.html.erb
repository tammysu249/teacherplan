<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Invites

    <a data-toggle="collapse" href="#improvement_plan_invites_new_form">
      Add invite
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @improvement_plan.invites.each do |invite| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to invite, invite %>

        <%= link_to invite, method: :delete, data: { confirm: "Do you really want to delete this invite" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="improvement_plan_invites_new_form">
        <%= render partial: "improvement_plans/improvement_plan_invites_new_form" %>
      </div>
    </div>

  </ul>
</div>
