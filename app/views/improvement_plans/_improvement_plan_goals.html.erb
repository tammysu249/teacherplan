<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Goals

    <a data-toggle="collapse" href="#improvement_plan_goals_new_form">
      Add goal
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @improvement_plan.goals.each do |goal| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to goal, goal %>

        <%= link_to goal, method: :delete, data: { confirm: "Do you really want to delete this goal" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="improvement_plan_goals_new_form">
        <%= render partial: "improvement_plans/improvement_plan_goals_new_form" %>
      </div>
    </div>

  </ul>
</div>
