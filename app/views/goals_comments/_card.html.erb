<div class="card mb-3">
  <h2 class="card-header h4">
    Goals Comment #<%= goals_comment.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Goal</dt>
      <dd>
        <% if @goals_comment.goal.present? %>
          <%= link_to goals_comment.goal, goals_comment.goal %>
        <% end %>
      </dd>

      <dt>Coach</dt>
      <dd><%= goals_comment.coach_id %></dd>

      <dt>Content</dt>
      <dd><%= goals_comment.content %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back goals_comment, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_goals_comment_url(goals_comment), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to goals_comment, method: :delete, data: { confirm: "Do you really want to delete this goals_comment?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(goals_comment.updated_at) %> ago
  </div>
</div>
