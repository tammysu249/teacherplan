<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Goals Comments

    <a data-toggle="collapse" href="#goal_goals_comments_new_form">
      Add goals comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @goal.goals_comments.each do |goals_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to goals_comment, goals_comment %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to goals_comment, method: :delete, data: { confirm: "Do you really want to delete this goals_comment" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="goal_goals_comments_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
